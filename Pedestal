  <script>
    function verifyPedestalCode() {
      var code = prompt("Welcome, you are an operator of Pedestal Crane.\nPlease enter your access code which was given by the admin to access checklist.");
      if (code === "787900") {
        window.location.href = "https://forms.office.com/r/KnJraV7jDB";
      } else {
        alert("Incorrect access code. Please try again.");
      }
    }
  </script>
